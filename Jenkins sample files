✅ Simple Jenkinsfile (Build → Test → Deploy)

pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building the application...'
        sh 'echo "Simulating build step..."'
      }
    }

    stage('Test') {
      steps {
        echo 'Running tests...'
        sh 'echo "Simulating test step..."'
      }
    }

    stage('Deploy') {
      steps {
        echo 'Deploying the application...'
        sh 'echo "Simulating deployment step..."'
      }
    }
  }
}
